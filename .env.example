# Server Configuration
SERVER_PORT=5002
CLIENT_PORT=80

# JWT Secret (REQUIRED - Generate a strong random string)
# Use: openssl rand -base64 32
JWT_SECRET=your_very_secure_random_secret_key_here_min_32_chars

# Email Configuration (Optional - Leave empty to disable email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=your-email@gmail.com

# Client URL (Update with your domain or IP)
CLIENT_URL=http://localhost

# Production Settings
NODE_ENV=production
